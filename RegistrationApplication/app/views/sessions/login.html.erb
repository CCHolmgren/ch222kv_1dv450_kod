<h1>Hello from login</h1>
<%= form_for(:session, url: login_path) do |f| %>
    <div class="row">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="row">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <label>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => "label-body" %>
    </label>
    <%= f.submit "Login", :class => "button-primary" %>
<% end %>