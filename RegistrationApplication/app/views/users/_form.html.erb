<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="field three columns">
        <%= f.label :username %>
        <%= f.text_field :username, :class => "u-full-width"  %>
      </div>
    </div>
    <div class="row">
      <div class="six columns">
        <div class="field three columns">
          <%= f.label :password %>
          <%= f.password_field :password, :class => "u-full-width" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="field three columns">
        <%= f.label :email %>
        <%= f.email_field :email, :class => "u-full-width"  %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit :class => "button-primary" %>
    </div>
<% end %>
